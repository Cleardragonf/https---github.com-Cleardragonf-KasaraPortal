{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",                      
    "module": "CommonJS",                 
    "outDir": "./dist",                   
    "rootDir": "./src",                   
    "esModuleInterop": true,              
    "skipLibCheck": true,                 
    "strict": true,                       
    "resolveJsonModule": true,            
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true                  
  },
  "include": [
    "src/**/*.ts"                          
  ],
  "exclude": [
    "node_modules"                         
  ]
}
